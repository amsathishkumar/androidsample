<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/LinearLayout1" android:layout_width="match_parent"
	android:layout_height="match_parent" android:orientation="vertical">
	<RelativeLayout android:layout_centerInParent="true" android:layout_width="match_parent"
	android:layout_height="wrap_content" android:gravity="center">
			<VideoView android:id="@+id/videoView1"
			android:layout_width="320px" android:layout_height="240px"
			></VideoView>
	</RelativeLayout>
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:layout_alignParentBottom="true">
		<Button android:layout_height="wrap_content" android:text="Play Video"
			android:id="@+id/button2" 
			android:layout_width="0dp" android:layout_gravity="right"
			android:layout_weight="1"></Button>
	</LinearLayout>
</RelativeLayout>
